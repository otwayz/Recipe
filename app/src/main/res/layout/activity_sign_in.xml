<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    <ImageView-->
    <!--        android:id="@+id/iv_back"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="14dp"-->
    <!--        android:layout_marginTop="18dp"-->
    <!--        android:layout_marginBottom="4dp"-->
    <!--        android:background="?attr/selectableItemBackground"-->
    <!--        android:src="@drawable/icon_back_dark" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="26dp"
        android:text="账号密码登录"
        android:textColor="@color/color_333333"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="26dp"
        android:textColorHint="@color/color_bebebe">

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_et_phone"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="手机/邮箱/用户名"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="19sp"
            tools:ignore="TextFields" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="26dp"
        android:textColorHint="@color/color_bebebe">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_et_verification_code"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="19sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="26dp"
        android:text="还没有账号，去注册"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_login_button_login"
        android:enabled="false"
        android:text="同意协议并登录"
        android:textColor="@color/color_ffffff"
        android:textSize="17sp" />

</LinearLayout>